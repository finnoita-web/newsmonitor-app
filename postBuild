#!/bin/bash

# Install Chromium for Playwright
playwright install chromium

# Install missing system libraries
apt-get update && apt-get install -y \
  libnss3 \
  libnspr4 \
  libatk1.0-0 \
  libatk-bridge2.0-0 \
  libcups2 \
  libxcomposite1 \
  libxrandr2 \
  libxdamage1 \
  libxfixes3 \
  libxkbcommon0 \
  libasound2 \
  libpangocairo-1.0-0 \
  libpango-1.0-0 \
  libgtk-3-0 \
  libgbm1 \
  libx11-xcb1 \
  libx11-6 \
  libxcb1 \
  libxext6 \
  libxrender1 \
  libffi7 \
  libdrm2 \
  libnss3-tools

